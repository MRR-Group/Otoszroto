{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "isolatedModules": true,
        "skipLibCheck": true,
        "strict": true,
        "types": ["@types/node", "vite/client", "vitest/globals"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "resources/js/Types"
        ]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "public",
        "storage",
        "bootstrap/cache",
        "dist"
    ]
}
